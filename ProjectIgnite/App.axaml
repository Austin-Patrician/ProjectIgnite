<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ProjectIgnite.App"
             xmlns:local="using:ProjectIgnite"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />

        
        <!-- 全局主题样式 -->
        <Style>
            <!-- 主窗口样式 -->
            <Style Selector="Window">
                <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            </Style>
            
            <!-- 滚动条样式 -->
            <Style Selector="ScrollBar">
                <Setter Property="AllowAutoHide" Value="True"/>
                <Setter Property="Margin" Value="0"/>
            </Style>
            
            <!-- 分隔线样式 -->
            <Style Selector="GridSplitter">
                <Setter Property="Background" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            </Style>
            
            <Style Selector="GridSplitter:pointerover">
                <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            </Style>
            
            <!-- 边框样式 -->
            <Style Selector="Border.Panel">
                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
            </Style>
            
            <!-- 工具提示样式 -->
            <Style Selector="ToolTip">
                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
            
            <!-- 按钮基础样式 -->
            <Style Selector="Button">
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="FontWeight" Value="Normal"/>
            </Style>
            
            <!-- 文本框样式 -->
            <Style Selector="TextBox">
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
            
            <!-- 列表框样式 -->
            <Style Selector="ListBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
        </Style>
        
        <!-- 专业导航栏样式 -->
        <Style Selector="Border.NavigationPanel">
            <Setter Property="Background" Value="{DynamicResource NavigationBackgroundBrush}"/>
            <Setter Property="BoxShadow" Value="{DynamicResource NavigationShadow}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,16"/>
        </Style>
        
        <!-- 导航标题样式 -->
        <Style Selector="TextBlock.NavigationTitle">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource NavigationTitleBrush}"/>
            <Setter Property="Margin" Value="12,0,12,20"/>
            <Setter Property="LetterSpacing" Value="0.5"/>
        </Style>
        
        <!-- 导航项容器样式 -->
        <Style Selector="Button.NavigationItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="{DynamicResource NavigationItemHeight}"/>
            <Setter Property="CornerRadius" Value="{DynamicResource NavigationItemCornerRadius}"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.NavigationItem:pointerover">
            <Setter Property="Background" Value="{DynamicResource NavigationItemHoverBrush}"/>
            <Setter Property="RenderTransform" Value="translateX(4px) scale(1.02)"/>
        </Style>
        
        <Style Selector="Button.NavigationItem:pressed">
            <Setter Property="Background" Value="{DynamicResource NavigationItemActiveBrush}"/>
            <Setter Property="RenderTransform" Value="translateX(2px) scale(0.98)"/>
        </Style>
        
        <Style Selector="Button.NavigationItem.Selected">
            <Setter Property="Background" Value="{DynamicResource NavigationItemSelectedBrush}"/>
            <Setter Property="RenderTransform" Value="translateX(6px)"/>
            <Setter Property="BorderBrush" Value="#4299E1"/>
            <Setter Property="BorderThickness" Value="0,0,3,0"/>
        </Style>
        
        <Style Selector="Button.NavigationItem.Selected:pointerover">
            <Setter Property="RenderTransform" Value="translateX(6px) scale(1.02)"/>
        </Style>
        
        <!-- 导航项内容容器样式 -->
        <Style Selector="StackPanel.NavigationItemContent">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Spacing" Value="14"/>
            <Setter Property="Margin" Value="18,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- 导航项图标样式 -->
        <Style Selector="TextBlock.NavigationIcon">
            <Setter Property="FontSize" Value="{DynamicResource NavigationIconSize}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource NavigationTextBrush}"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Foreground" Duration="0:0:0.15"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <!-- 导航项文字样式 -->
        <Style Selector="TextBlock.NavigationText">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource NavigationTextBrush}"/>
            <Setter Property="LetterSpacing" Value="0.5"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Foreground" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <!-- 选中状态下的图标和文字样式 -->
        <Style Selector="Button.NavigationItem.Selected TextBlock.NavigationIcon">
            <Setter Property="Foreground" Value="#4299E1"/>
            <Setter Property="RenderTransform" Value="scale(1.1)"/>
        </Style>
        
        <Style Selector="Button.NavigationItem.Selected TextBlock.NavigationText">
            <Setter Property="Foreground" Value="#4299E1"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- 悬停状态下的图标和文字样式 -->
        <Style Selector="Button.NavigationItem:pointerover TextBlock.NavigationIcon">
            <Setter Property="RenderTransform" Value="scale(1.05)"/>
        </Style>
        
        <Style Selector="Button.NavigationItem:pointerover TextBlock.NavigationText">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- 导航列表样式 -->
        <Style Selector="ListBox.NavigationList">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        
        <Style Selector="ListBox.NavigationList ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style Selector="ListBox.NavigationList ListBoxItem:selected">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Application.Styles>
    
    <Application.Resources>
        <!-- 主题相关资源 -->
        <ResourceDictionary>
            <!-- 动画持续时间 -->
            <x:Double x:Key="ThemeTransitionDuration">0.2</x:Double>
            <x:Double x:Key="NavigationTransitionDuration">0.15</x:Double>
            
            <!-- 间距定义 -->
            <x:Double x:Key="SmallSpacing">4</x:Double>
            <x:Double x:Key="MediumSpacing">8</x:Double>
            <x:Double x:Key="LargeSpacing">16</x:Double>
            <x:Double x:Key="ExtraLargeSpacing">24</x:Double>
            
            <!-- 字体大小 -->
            <x:Double x:Key="SmallFontSize">12</x:Double>
            <x:Double x:Key="MediumFontSize">14</x:Double>
            <x:Double x:Key="LargeFontSize">16</x:Double>
            <x:Double x:Key="ExtraLargeFontSize">18</x:Double>
            <x:Double x:Key="TitleFontSize">24</x:Double>
            
            <!-- 圆角半径 -->
            <CornerRadius x:Key="SmallCornerRadius">4</CornerRadius>
            <CornerRadius x:Key="MediumCornerRadius">6</CornerRadius>
            <CornerRadius x:Key="LargeCornerRadius">8</CornerRadius>
            <CornerRadius x:Key="NavigationItemCornerRadius">8</CornerRadius>
            
            <!-- 阴影效果 -->
            <BoxShadows x:Key="SmallShadow">0 1 3 0 #19000000</BoxShadows>
            <BoxShadows x:Key="MediumShadow">0 2 6 0 #19000000</BoxShadows>
            <BoxShadows x:Key="LargeShadow">0 4 12 0 #19000000</BoxShadows>
            <BoxShadows x:Key="NavigationShadow">0 2 8 0 #0F000000</BoxShadows>
            <BoxShadows x:Key="NavigationItemShadow">0 1 4 0 #0A000000</BoxShadows>
            
            <!-- 导航菜单相关 -->
            <x:Double x:Key="NavigationPanelWidth">250</x:Double>
            <x:Double x:Key="NavigationPanelMinWidth">200</x:Double>
            <x:Double x:Key="NavigationPanelMaxWidth">400</x:Double>
            <x:Double x:Key="NavigationItemHeight">44</x:Double>
            <x:Double x:Key="NavigationIconSize">18</x:Double>
            
            <!-- 导航渐变背景 -->
            <LinearGradientBrush x:Key="NavigationBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FF2D3748" Offset="0"/>
                <GradientStop Color="#FF1A202C" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="NavigationBackgroundBrushLight" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFF7FAFC" Offset="0"/>
                <GradientStop Color="#FFEDF2F7" Offset="1"/>
            </LinearGradientBrush>
            
            <!-- 导航项背景 -->
            <SolidColorBrush x:Key="NavigationItemHoverBrush" Color="#1A4299E1"/>
            <SolidColorBrush x:Key="NavigationItemSelectedBrush" Color="#334299E1"/>
            <SolidColorBrush x:Key="NavigationItemActiveBrush" Color="#4A4299E1"/>
            
            <!-- 导航文字颜色 -->
            <SolidColorBrush x:Key="NavigationTextBrush" Color="#E2E8F0"/>
            <SolidColorBrush x:Key="NavigationTextHoverBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="NavigationTextSelectedBrush" Color="#FFFFFF"/>
            
            <SolidColorBrush x:Key="NavigationTextBrushLight" Color="#2D3748"/>
            <SolidColorBrush x:Key="NavigationTextHoverBrushLight" Color="#1A202C"/>
            <SolidColorBrush x:Key="NavigationTextSelectedBrushLight" Color="#1A202C"/>
            
            <!-- 导航标题颜色 -->
            <SolidColorBrush x:Key="NavigationTitleBrush" Color="#A0AEC0"/>
            <SolidColorBrush x:Key="NavigationTitleBrushLight" Color="#718096"/>
            
            <!-- 日志面板高度 -->
            <x:Double x:Key="LogPanelHeight">200</x:Double>
            <x:Double x:Key="LogPanelMinHeight">100</x:Double>
            <x:Double x:Key="LogPanelMaxHeight">400</x:Double>
            
            <!-- 工具栏高度 -->
            <x:Double x:Key="ToolbarHeight">48</x:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>