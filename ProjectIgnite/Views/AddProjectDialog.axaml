<Window x:Class="ProjectIgnite.Views.AddProjectDialog"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="添加项目源" 
        Height="720" 
        Width="600"
        MinHeight="650"
        MinWidth="550"
        MaxHeight="900"
        MaxWidth="750"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        ShowInTaskbar="False"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"
        Icon="/Assets/avalonia-logo.ico">
    
    <Window.Styles>
        <!-- 对话框专用样式 - 兼容版本 -->
        <Style Selector="TextBox.DialogInput">
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="TextBox.DialogInput:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
        </Style>
        
        <Style Selector="TextBox.DialogInput:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
        </Style>
        
        <!-- 错误状态样式 -->
        <Style Selector="TextBox.DialogInput.HasError">
            <Setter Property="BorderBrush" Value="#FFE74C3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#FFF8F8F8"/>
        </Style>
        
        <Style Selector="TextBox.DialogInput.HasError:focus">
            <Setter Property="BorderBrush" Value="#FFE74C3C"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style Selector="TextBlock.DialogLabel">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style Selector="Button.DialogPrimary">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="MinWidth" Value="130"/>
            <Setter Property="MinHeight" Value="42"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.DialogPrimary:pointerover">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="RenderTransform" Value="scale(1.02)"/>
        </Style>
        
        <Style Selector="Button.DialogPrimary:pressed">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark2}"/>
            <Setter Property="RenderTransform" Value="scale(0.98)"/>
        </Style>
        
        <Style Selector="Button.DialogPrimary:disabled">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            <Setter Property="Opacity" Value="0.6"/>
        </Style>
        
        <Style Selector="Button.DialogSecondary">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="MinHeight" Value="42"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.DialogSecondary:pointerover">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseMediumLowBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
        </Style>
        
        <Style Selector="CheckBox.DialogOption">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Padding" Value="10,0,0,0"/>
            <Setter Property="MinHeight" Value="32"/>
        </Style>
        
        <Style Selector="ComboBox.DialogSelect">
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="ComboBox.DialogSelect:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style Selector="ComboBox.DialogSelect:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
        </Style>
        
        <Style Selector="ComboBox.DialogSelect:disabled">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            <Setter Property="Opacity" Value="0.6"/>
        </Style>
        
        <Style Selector="Border.InfoPanel">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style Selector="Border.ErrorPanel">
            <Setter Property="Background" Value="#33E74C3C"/>
            <Setter Property="BorderBrush" Value="#FFE74C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style Selector="Border.ContentSection">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <Style Selector="TextBlock.InfoText">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundChromeWhiteBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="18"/>
        </Style>
        
        <Style Selector="TextBlock.ErrorText">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FFE74C3C"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="18"/>
        </Style>
        
        <Style Selector="TextBlock.SectionTitle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style Selector="TextBlock.ValidationHint">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#FFE74C3C"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </Window.Styles>
    
    <Border Padding="28" Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 标题区域 -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="添加新的项目源" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                           Margin="0,0,0,8"/>
                <TextBlock Text="从 Git 仓库克隆项目到本地并进行管理" 
                           FontSize="15" 
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           LineHeight="22"/>
            </StackPanel>
            
            <!-- 表单内容 -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="0,0,12,0"
                          Margin="0,0,8,0">
                <StackPanel Spacing="0">
                    
                    <!-- Git URL 区域 -->
                    <StackPanel Margin="0,0,0,32">
                        <TextBlock Text="Git 仓库地址 *" Classes="DialogLabel"/>
                        <TextBox x:Name="GitUrlTextBox" 
                                 Classes="DialogInput"
                                 Text="{Binding GitUrl}"
                                 Watermark="https://github.com/user/repository.git"
                                 TextChanged="GitUrlTextBox_TextChanged"/>
                        
                        <!-- 验证成功状态显示 -->
                        <Border Classes="InfoPanel"
                                IsVisible="{Binding IsValid}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="✓" 
                                           FontSize="14" 
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Git URL 验证成功" 
                                           Classes="InfoText"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Git 仓库信息显示 -->
                        <Border x:Name="RepoInfoPanel" 
                                Classes="InfoPanel"
                                IsVisible="{Binding HasRepositoryInfo}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="仓库信息" 
                                           FontWeight="Bold" 
                                           Classes="InfoText"/>
                                <TextBlock Text="{Binding RepositoryInfo.Description}" 
                                           Classes="InfoText"
                                           IsVisible="{Binding HasRepositoryDescription}"/>
                                <StackPanel Orientation="Horizontal" Spacing="20">
                                    <TextBlock Text="{Binding RepositoryDefaultBranchText}" 
                                               Classes="InfoText"
                                               IsVisible="{Binding HasRepositoryDefaultBranch}"/>
                                    <TextBlock Text="{Binding RepositoryLanguageText}" 
                                               Classes="InfoText"
                                               IsVisible="{Binding HasRepositoryLanguage}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- 项目设置区域 -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="项目设置" Classes="SectionTitle"/>
                        
                        <Border Classes="ContentSection">
                            <StackPanel Spacing="20">
                                
                                <!-- 项目名称 -->
                                <StackPanel>
                                    <TextBlock Text="项目名称" Classes="DialogLabel"/>
                                    <TextBox x:Name="ProjectNameTextBox" 
                                             Classes="DialogInput"
                                             Text="{Binding ProjectName}"
                                             Watermark="自动从仓库名称获取"/>
                                </StackPanel>
                                
                                <!-- 分支选择 -->
                                <StackPanel>
                                    <TextBlock Text="分支" Classes="DialogLabel"/>
                                    <ComboBox x:Name="BranchComboBox" 
                                              Classes="DialogSelect"
                                              ItemsSource="{Binding AvailableBranches}"
                                              SelectedItem="{Binding SelectedBranch}"
                                              PlaceholderText="{Binding BranchStatusText}"
                                              IsEnabled="{Binding !IsLoadingBranches}"/>
                                </StackPanel>
                                
                                <!-- 本地存储路径 -->
                                <StackPanel>
                                    <TextBlock Text="本地存储路径" Classes="DialogLabel"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="LocalPathTextBox" 
                                                 Grid.Column="0"
                                                 Classes="DialogInput"
                                                 Text="{Binding LocalPath}"
                                                 Margin="0"/>
                                        <Button Grid.Column="2" 
                                                Content="浏览" 
                                                Classes="DialogSecondary"
                                                Click="BrowseButton_Click"
                                                MinWidth="80"/>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- 项目描述 -->
                                <StackPanel>
                                    <TextBlock Text="项目描述" Classes="DialogLabel"/>
                                    <TextBox x:Name="DescriptionTextBox" 
                                             Classes="DialogInput"
                                             Text="{Binding Description}"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             Height="90"
                                             VerticalContentAlignment="Top"
                                             Watermark="可选：项目描述信息"/>
                                </StackPanel>
                                
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- 克隆选项区域 -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="克隆选项" Classes="SectionTitle"/>
                        
                        <Border Classes="ContentSection">
                            <StackPanel Spacing="12">
                                <CheckBox Content="浅克隆（只下载最新版本，节省空间和时间）" 
                                          Classes="DialogOption"
                                          IsChecked="{Binding IsShallowClone}"/>
                                <CheckBox Content="克隆完成后自动进行语言分析" 
                                          Classes="DialogOption"
                                          IsChecked="{Binding AutoAnalyze}"/>
                                <CheckBox Content="如果目标目录已存在，覆盖现有内容" 
                                          Classes="DialogOption"
                                          IsChecked="{Binding OverwriteExisting}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- 按钮区域 -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="0,1,0,0"
                    Margin="-28,20,-28,-28"
                    Padding="28,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 验证按钮 -->
                    <Button Grid.Column="1" 
                            Content="验证仓库" 
                            Classes="DialogSecondary"
                            Command="{Binding ValidateRepositoryCommand}"
                            Margin="0,0,12,0"/>
                    
                    <!-- 取消按钮 -->
                    <Button Grid.Column="2" 
                            Content="取消" 
                            Classes="DialogSecondary"
                            Click="CancelButton_Click"
                            Margin="0,0,12,0"/>
                    
                    <!-- 确定按钮 -->
                    <Button Grid.Column="3" 
                            Content="添加项目" 
                            Classes="DialogPrimary"
                            Command="{Binding AddProjectCommand}"
                            IsDefault="True"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
